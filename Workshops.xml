<library>
	<!--Types-->
	<type name="Blacksmith_Workshop">
		<inherit name="Workshop" />
		
		<stat_attr type="string">blacksmithing</stat_attr>
		
		<products type="objectlist">Iron_Axe;Iron_Blacksmith_Workshop;Iron_Smelter_Workshop;Iron_Pickaxe</products>
	</type>
	
	<type name="Carpenter_Workshop">
		<inherit name="Workshop" />
		
		<stat_attr type="string">carpentry</stat_attr>
		
		<products type="objectlist">Wooden_Carpenter_Workshop;Wooden_Blacksmith_Workshop;Wooden_Smelter_Workshop;Wooden_Axe;Wooden_Pickaxe</products>
	</type>
	
	<type name="Smelter_Workshop">
		<inherit name="Workshop" />
