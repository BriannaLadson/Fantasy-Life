		<stat_attr type="string">smelting</stat_attr>
	</type>
	
	<!--Blacksmith Workshop-->
	<object name="Bone_Blacksmith_Workshop">
		<inherit name="Blacksmith_Workshop" />
		
		<alias>Bone Blacksmith Forge</alias>
		<main_alias>Bone Blacksmith Forge</main_alias>
		
		<material type="object">Bone</material>
		
		<base_value type="int">10</base_value>
	</object>
	
